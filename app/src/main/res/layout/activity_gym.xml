<?xml version="1.0" encoding="UTF-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <!--android:paddingBottom="@dimen/activity_vertical_margin"android:paddingLeft="@dimen/activity_horizontal_margin"android:paddingRight="@dimen/activity_horizontal_margin"android:paddingTop="@dimen/activity_vertical_margin" -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v4.view.ViewPager
                android:id="@+id/viewpager1"
                android:layout_width="match_parent"
                android:layout_height="200dp" />

            <android.support.design.widget.TabLayout
                android:id="@+id/tab_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/viewpager1"
                android:layout_alignBottom="@+id/viewpager1"
                android:paddingRight="15dp"
                app:tabBackground="@drawable/tab_selector"
                app:tabGravity="center"
                app:tabIndicatorHeight="0dp" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tab_first"
            android:layout_width="200px"
            android:layout_height="50dp"
            android:layout_marginLeft="140px"
            android:layout_marginRight="140px"
            android:background="@drawable/tab_bg_selector"
            android:gravity="center"
            android:text="상품"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/tab_second"
            android:layout_width="200px"
            android:layout_height="50dp"
            android:layout_marginLeft="140px"
            android:layout_marginRight="140px"
            android:background="@drawable/tab_bg_selector"
            android:gravity="center"
            android:text="정보"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/tab_third"
            android:layout_width="200px"
            android:layout_height="50dp"
            android:layout_marginLeft="140px"
            android:layout_marginRight="140px"
            android:background="@drawable/tab_bg_selector"
            android:gravity="center"
            android:text="리뷰"
            android:textColor="#000000" />
    </LinearLayout>

    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ivMainImage"
        android:layout_alignLeft="@+id/ivMainImage"
        android:layout_weight="3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <android.support.v4.view.ViewPager
                android:id="@+id/vp"
                android:layout_width="match_parent"
                android:layout_height="500dp" />

        </LinearLayout>
    </ScrollView>


    -

    <LinearLayout
        android:id="@+id/layoutBottomButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="76px">

            <Button
                android:id="@+id/btnCall"
                android:layout_width="904px"
                android:layout_height="186px"
                android:layout_marginLeft="61px"
                android:layout_marginRight="54px"
                android:background="@drawable/button"
                android:text="헬스장 이용하기"
                android:textColor="@drawable/clickabletext" />

            <Button
                android:id="@+id/btnMessage"
                android:layout_width="357px"
                android:layout_height="186px"
                android:layout_marginRight="63px"

                android:layout_marginBottom="10dp"
                android:background="@drawable/button"
                android:text="실시간 톡"
                android:textColor="@drawable/clickabletext" />


        </LinearLayout>
    </LinearLayout>

</LinearLayout>

